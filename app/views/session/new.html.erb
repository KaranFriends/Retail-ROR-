<body style="background-color:#4B515D">

  <ul class="nav justify-content-end bg-light" >

    <li class="nav-item">

      <div class="nav-link active" >
        <%=  link_to 'Login' , new_session_path, class: "btn" %>
      </div>
    </li>

    <li class="nav-item">

      <div class="nav-link active" >
        <%=  link_to "Sign Up" , new_registration_path, class: "btn" %>
      </div>
    </li>
  </ul>

  <div align="center" class="container " style="width: 500px; background-color:#3E4551">

    <div class="px-xl-5 py-xl-5">
      <%= form_for @user, url: { action: "create" }, :html => {:class => "form-horizontal center text-light"} do |f| %>

      <div class="row">

        <div class="col-xl-12">

          <div class="row pl-xl-3">
            <%= f.label :user_name, "User name:", class: " control-label" %>
          </div>

          <%= f.text_field :user_name, class: "form-control" %>
        </div>
      </div>

      <div class="row pl-xl-3 py-xl-2">
        <%= f.label :password, "Password:", class: " control-label" %>
      </div>

      <div class="row">

        <div class="col-xl-12">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="row pt-xl-5 pl-xl-3">

        <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
      </div>
      <% end %>

    </div>
  </div>
</body>

</html>
