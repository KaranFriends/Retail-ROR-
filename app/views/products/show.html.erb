<meta name="viewport" content="width=device-width, initial-scale=1">

<%# render "layouts/home_logout" %>

<div class="container-fluid">

  <div class="row">

    <div class="col-xl-2" style="background-color:#ffffff">

      <%= render partial: "layouts/side_navbar", locals: {selected: "product"} %>
    </div>

    <div class="col-xl-9" style="width: 1000px; background-color:#4B515D">

      <div class="px-xl-5 py-xl-5">
        <%# <%= form_for :product, url: cart_path(id: @cart.id, product_id: @product.id, status: "new", quantity: "1"), method: "put", html: {class: "form-horizontal center text-light"}, remote: true do |f| %>

