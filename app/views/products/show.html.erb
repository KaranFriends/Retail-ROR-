            <div class="row pt-xl-5 pl-xl-3">

              <%= button_to "Add To Cart", cart_path(id: @cart.id, product_id: @product.id, status: "new", quantity: "1"), method: "put",  class: "btn btn-default btn-primary", data: { confirm: 'Are you sure ?' }, remote: true %>
            </div>
          </div>

        </div>
