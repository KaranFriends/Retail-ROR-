<body style="background-color:#4B515D">

  <%# <%= render "navbar" %>

  <div align="center" class="container " style="width: 1000px; background-color:#3E4551">

    <div class="px-xl-5 py-xl-5">

      <%= form_for :user, url: { action: "create" }, :html => {:class => "form-horizontal center text-light"} do |f| %>
      <div class="row">

        <div class="col-xl-6">

          <div class="row pl-xl-3">
            <%= f.file_field :picture,class: "btn btn-default btn-primary" %>
          </div>
        </div>
      </div>
      <div class="row">

        <div class="col-xl-6">

          <div class="row pl-xl-3">
            <%= f.label :email, "Email:", class: " control-label" %>
          </div>
          <%= f.text_field :email, class: "form-control" %>

          <% if @user.errors[:email].any?%>
          <div class="row pl-xl-3 text-left">
            <div class="text-danger">
              <% @user.errors[:email].each do |error| %>
                **<%= error %> <br>
              <% end %>
            </div>
          </div>
          <% end %>

        </div>

        <div class="col-xl-6">

          <div class="row pl-xl-3">
            <%= f.label :password, "Password:", class: " control-label" %>
          </div>

          <%= f.text_field :password, class: "form-control" %>
          <% if @user.errors[:password].any?%>
          <div class="row pl-xl-3 text-left">
            <div class="text-danger">
              <% @user.errors[:password].each do |error| %>
                **<%= error %> <br>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>

      <div class="row">

        <div class="col-xl-6">

          <div class="row pl-xl-3 py-xl-2">
            <%= f.label :user_name, "User Name:", class: " control-label" %>
          </div>
          <%= f.text_field :user_name, class: "form-control" %>
          <% if @user.errors[:user_name].any?%>
          <div class="row pl-xl-3 text-left">
            <div class="text-danger">
              <% @user.errors[:user_name].each do |error| %>
                **<%= error %> <br>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>

        <div class="col-xl-6">

          <div class="row pl-xl-3 py-xl-2">
            <%= f.label :phone_number, "Phone Number:", class: " control-label" %>
          </div>

          <%= f.text_field :phone_number, class: "form-control" %>
          <% if @user.errors[:phone_number].any?%>
          <div class="row pl-xl-3 text-left">
            <div class="text-danger">
              <% @user.errors[:phone_number].each do |error| %>
                **<%= error %> <br>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>

      </div>

      <div class="row pl-xl-3 py-xl-2">
        <%= f.label :alternate_number, "Alternate Number:", class: " control-label" %>
      </div>

      <div class="row">

        <div class="col-xl-6">
          <%= f.text_field :alternate_number, class: "form-control" %>
          <% if @user.errors[:alternate_number].any?%>
          <div class="row pl-xl-3 text-left">
            <div class="text-danger">
              <% @user.errors[:alternate_number].each do |error| %>
                **<%= error %> <br>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>

      <div class="row pt-xl-5 pl-xl-3">

        <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
      </div>
      <% end %>

    </div>
  </div>
</body>
