<meta name="viewport" content="width=device-width, initial-scale=1">

<%# render "layouts/home_logout" %>

<div class="container-fluid">

  <div class="row">

    <div class="col-xl-2" style="background-color:#ffffff">

      <%= render partial: "layouts/side_navbar", locals: {selected: "settings"} %>
    </div>

    <div class="col-xl-9" style="width: 1000px; background-color:#4B515D">

      <div class="px-xl-5 py-xl-5">
        <%= form_for @user, url: setting_path(id: current_user.id), method: "put", html: {class: "form-horizontal center text-light"}, remote: true do |f| %>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3 has_picture">
              <%= render partial: "picture" %>
            </div>

            <div class="py-xl-3">
              <%= link_to 'Delete', setting_path(id: current_user.id), class: 'btn btn-default btn-primary', method: 'delete', remote: true %>
              <%= f.file_field :picture,class: "btn btn-default btn-primary" %>
            </div>
          </div>
        </div>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%= f.label "Email:",class: " control-label" %>
            </div>
            <%= f.text_field :email,value: @user.email, class: "form-control" %>
          </div>

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%= f.label "Password:", class: " control-label" %>
            </div>
            <%= f.text_field :password, value: @user.password,class: "form-control" %>
          </div>
        </div>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3 py-xl-2">
              <%= f.label :user_name, "User Name:", class: " control-label" %>
            </div>
            <%= f.text_field :user_name,value: @user.user_name, class: "form-control" %>
          </div>

          <div class="col-xl-6">

            <div class="row pl-xl-3 py-xl-2">
              <%= f.label "Phone Number:", class: " control-label" %>
            </div>
            <%= f.text_field :phone_number,value: @user.phone_number, class: "form-control" %>
          </div>

        </div>

        <div class="row pl-xl-3 py-xl-2">
          <%= f.label  "Alternate Number:", class: " control-label" %>
        </div>

        <div class="row">
          <div class="col-xl-6">
            <%= f.text_field :alternate_number,value: @user.alternate_number, class: "form-control" %>
          </div>
        </div>

        <div class="row pt-xl-5 pl-xl-3">

          <%= f.submit "Submit", class: "btn btn-default btn-primary", data: { confirm: 'Are you sure ?' }  %>
        </div>
        <% end %>

      </div>
    </div>
  </div>

</div>
