<meta name="viewport" content="width=device-width, initial-scale=1">

<nav class="navbar navbar-expand-lg navbar-dark bg-light rounded ">
  <%= User.find_by(id: session[:current_user_id]).user_name %>
  <%# @user.user_name %>

  <ul class="nav mr-auto">
    <!-- <li class="nav-item active">
      <%#  link_to 'Home' , 'sessions/new', :class => "btn nav-link" %>
    </li> -->
  </ul>

  <ul class="nav justify-content-end bg-light">

    <li class="nav-item">

      <div class="nav-link active" >
        <%=  link_to 'Home' , { controller: "dashboard", action: "index"}, :class => "btn" %>
      </div>
    </li>

    <li class="nav-item">

      <div class="nav-link active" >
        <%= link_to 'Log Out', session_path(id: session[:current_user_id]), :class => "btn", method: 'delete' %>
      </div>
    </li>
  </ul>
</nav>

<div class="container-fluid">

  <div class="row">

    <div class="col-xl-2" style="background-color:#ffffff">

      <div class="sidenav vertically-center alert" style="background-color:#4B515D; width: 180px;">
        <br><br>
        <li class="row py-xl-2 px-xl-2" >
          <%=  link_to 'Dashboard' , controller: "dashboard" , action: "index", :class => "btn" %>
        </li>
        <li class="row py-xl-2 px-xl-2">
          <%=  link_to 'Products' , controller: "product" , action: "index", :class => "btn" %>
        </li>
        <li class="row py-xl-2 px-xl-2" style="background-color:#ffffff">
          <%=  link_to 'Settings' , controller: "setting" , action: "index", :class => "btn" %>
        </li>
      </div>
    </div>

    <div class="col-xl-10" style="width: 1000px; background-color:#4B515D">

      <div class="px-xl-5 py-xl-5">
        <%= form_for @user, url: { action: "update", id: session[:current_user_id]}, :html => {class: "form-horizontal center text-light"} do |f| %>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%  @user.picture  %>
              <% image_present = @user.picture.blob.present? rescue nil %>
              <% if( image_present ) %>
                <%= image_tag(@user.picture, size: "100") %>
              <% else %>
                <%=  image_tag(:default, size: "100") %>
              <% end %>
            </div>

            <div class="py-xl-3">
              <%= link_to 'Delete', setting_path(id: session[:current_user_id]), class: 'btn', method: 'delete' %>
              <%= f.file_field :picture, class: " control-label" %>
            </div>
          </div>
        </div>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%= f.label "Email:", class: " control-label" %>
            </div>
            <%= f.text_field :email, :value => @user.email, class: "form-control" %>
          </div>

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%= f.label "Password:", class: " control-label" %>
            </div>
            <%= f.text_field :password, :value => @user.password, class: "form-control" %>
          </div>
        </div>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3 py-xl-2">
              <%= f.label :user_name, "User Name:", class: " control-label" %>
            </div>
            <%= f.text_field :user_name,:value => @user.user_name, class: "form-control" %>
          </div>

          <div class="col-xl-6">

            <div class="row pl-xl-3 py-xl-2">
              <%= f.label "Phone Number:", class: " control-label" %>
            </div>
            <%= f.text_field :phone_number,:value => @user.phone_number, class: "form-control" %>
          </div>

        </div>

        <div class="row pl-xl-3 py-xl-2">
          <%= f.label  "Alternate Number:", class: " control-label" %>
        </div>

        <div class="row">
          <div class="col-xl-6">
            <%= f.text_field :alternate_number,:value => @user.alternate_number, class: "form-control" %>
          </div>
        </div>

        <div class="row pt-xl-5 pl-xl-3">

          <%= f.submit "Submit", class: "btn btn-default btn-primary", data: { confirm: 'Are you sure ?' }  %>
        </div>
        <% end %>

      </div>
    </div>
  </div>

</div>
