<div class="col-xl-10" style="width: 1000px; height: 500px; background-color:#4B515D">
    <div class="row py-xl-3">
    <% cards.each do |card| %>

    <div class="col-xl-3 py-md-1 mx-md-3 border border-dark" style="background-color:#ffffff; width: 300px; height: 200px;" align="center">
      <br>
      Card Number:     <%= card.card_number %> <br>
      cvv:             <%= card.cvv %><br>
      Expiry Date:     <%= card.expiry %><br>
      card_holder_name:<%= card.card_holder_name %> <br>

      <%= button_to "Place Order with this card",payment_path(id: card.id,payment_id: payment_id) , method: "put",data: { confirm: 'Place order ?' } %>
    </div>
    <% end %>
    <div class="col-xl-3 py-md-3 mx-md-3 border border-dark text-center" style="background-color:#ffffff; width: 300px; height: 100px;">
      <%= link_to new_card_path(payment_id: payment_id) do %>
        <%= image_tag("add_icon.png",size: "60") %>
      <% end %>
    </div>

  </div>
</div>
