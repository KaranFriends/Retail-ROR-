<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="container-fluid">

  <div class="row">

    <div class="col-xl-2" style="background-color:#ffffff">

      <%= render partial: "layouts/side_navbar",locals: {selected: "cart"}%>
    </div>

    <div class="col-xl-10" style="width: 1000px; background-color:#4B515D">

      <div class="px-xl-5 py-xl-5">
        <%= form_for :card, url: cards_path(id: @payment), method: "post", html: {class: "form-horizontal center text-light"} do |f| %>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%= f.label "Card Number:",class: " control-label" %>
            </div>
            <%= f.text_field :card_number, class: "form-control" %>
          </div>

          <div class="col-xl-6">

            <div class="row pl-xl-3">
              <%= f.label "Expiry:", class: " control-label" %>
            </div>
            <%= f.text_field :expiry,class: "form-control" %>
            <%= f.hidden_field :user_id,value: current_user.id,class: "form-control" %>
          </div>
        </div>

        <div class="row">

          <div class="col-xl-6">

            <div class="row pl-xl-3 py-xl-2">
              <%= f.label "CVV:", class: " control-label" %>
            </div>
            <%= f.text_field :cvv, class: "form-control" %>
          </div>

          <div class="col-xl-6">

            <div class="row pl-xl-3 py-xl-2">
              <%= f.label "Card Holer Name:", class: " control-label" %>
            </div>
            <%= f.text_area :card_holder_name, class: "form-control" %>
          </div>

        </div>


        <div class="row pt-xl-5 pl-xl-3">
          <%= f.submit "Add Card", class: "btn btn-default btn-primary" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>

</div>
